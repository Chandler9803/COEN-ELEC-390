<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAF3FF">

    <!-- Toolbar replacement: Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#6A4CAF"
        android:textColor="#FFFFFF"/>

    <!-- Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:paddingTop="16dp"/>
    <EditText
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:enabled="false"/>

    <!-- Age -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="18sp"
        android:paddingTop="16dp"/>
    <EditText
        android:id="@+id/ageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Age"
        android:inputType="number"
        android:enabled="false"/>

    <!-- Weight -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="18sp"
        android:paddingTop="16dp"/>
    <EditText
        android:id="@+id/weightText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Weight"
        android:inputType="numberDecimal"
        android:enabled="false"/>
    <!-- Units for weight -->
    <Spinner
        android:id="@+id/weightUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <!-- Units -->

    <EditText
        android:id="@+id/unitsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose Units"
        android:inputType="numberDecimal"
        android:enabled="false"/>

    <!-- Warning Level -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning Level (% BAC)"
        android:textSize="18sp"
        android:paddingTop="16dp"/>
    <EditText
        android:id="@+id/warningText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Warning Level"
        android:inputType="numberDecimal"
        android:enabled="false"/>

    <!-- Switches -->
    <Switch
        android:id="@+id/shareSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Data"
        android:textSize="18sp"
        android:paddingTop="24dp"/>

    <Switch
        android:id="@+id/alertSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration Alert"
        android:textSize="18sp"
        android:paddingTop="8dp"/>

    <!-- Pair Button -->
    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back Button"
        android:layout_marginTop="24dp"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp"/>

</LinearLayout>
